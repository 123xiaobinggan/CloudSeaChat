.edit-container{padding:20px}.avatar-upload{display:flex;flex-direction:column;align-items:center;margin-bottom:20px}.avatar{width:100px;height:100px;border-radius:50%;margin-bottom:10px;background-color:#eaeaea;border:4rpx solid #fff;box-shadow:0 0 10rpx rgba(0,0,0,.2);position:relative;overflow:hidden;object-fit:cover;object-position:center}.avatar:after{content:"";position:absolute;top:0;left:0;right:0;bottom:0;border-radius:50%;border:2rpx solid rgba(255,255,255,.3);pointer-events:none}.input-field{width:100%;height:40px;border:1px solid #ccc;border-radius:5px;padding:0 10px;margin-bottom:15px}.save-btn,.upload-btn{width:100%;height:80rpx;background-color:#4caf50;color:#fff;border:none;border-radius:5px;display:flex;align-items:center;justify-content:center}
