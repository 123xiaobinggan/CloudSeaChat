.media-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3列九宫格 */
  gap: 6px;
  margin-top: 10px;
}

/* 媒体外层容器，固定宽高比例为正方形 */
.media-item {
  width: 100%;
  padding-top: 100%; /* 高度 = 宽度，实现正方形 */
  position: relative;
  overflow: hidden;
  border-radius: 6px;
}
.one-media-item {
  width: 100%; /* 宽度为父容器的100% */
  margin-top: 10px; /* 顶部间距 */
  border-radius: 6px; /* 圆角 */
  overflow: hidden; /* 防止内容溢出 */
}

/* 媒体本身 */
.post-media {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* 填充且裁剪成正方形 */
  border-radius: 6px;
}
.post-one-media{
  width: 100%; /* 宽度为父容器的100% */
  height: auto; /* 高度自适应 */
  object-fit: contain; /* 保持图片比例，且不超过容器 */
}
