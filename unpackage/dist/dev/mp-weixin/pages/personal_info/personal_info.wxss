/* 加载圈圈 */
.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #ccc;
  border-top: 6rpx solid #007AFF; /* 蓝色顶部边，形成动画 */
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10rpx;
}

/* 动画关键帧 */
@keyframes spin {
0% { transform: rotate(0deg);
}
100% { transform: rotate(360deg);
}
}
.loading-text{
  font-size: 26rpx;
