  font-size: 25rpx;
}
.top-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #eaeaea;
  border: 4rpx solid #fff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
  object-fit: cover;  /* 新增：保持比例填充并裁剪 */
  object-position: center;  /* 新增：确保居中裁剪 */
}
.top-avatar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);  /* 内层半透明白色边框 */
  pointer-events: none;
}
.text-info {
  margin-left: 20rpx;
  color: #fff;
  text-shadow: 1rpx 1rpx 3rpx rgba(0, 0, 0, 0.5);
}
.top-username {
